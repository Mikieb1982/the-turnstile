USE_FIRESTORE=false

# If you want to test Firestore locally:
# USE_FIRESTORE=true
# FIRESTORE_EMULATOR_HOST=localhost:8080
# FIREBASE_PROJECT_ID=FIREBASE_PROJECT_ID

PROJECT_ROOT=../
